    "version": "0.2.0",
    "configurations": [

        {
            "request": "launch",
            "name": "Launch App",
            "type": "node",
            "program": "${workspaceFolder}/app/main.ts",
            "cwd": "${workspaceFolder}/app",
            "env": {},
            "runtimeExecutable": "/home/user/.deno/bin/deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-wait",
                "--allow-all",
                "--env-file=../.env.app.local",
                "--env-file=../.env.db.local"
            ],
            "attachSimplePort": 9229
        }
    ]
}